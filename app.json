{
  "expo": {
    "name": "SuperManager",
    "slug": "supermanager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.svg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.svg",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.salvatorelombardi.supermanager",
      "infoPlist": {
        "NSCameraUsageDescription": "SuperManager ha bisogno della camera per scansionare i codici a barre dei prodotti."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.svg",
        "backgroundColor": "#667eea"
      },
      "package": "com.salvatorelombardi.supermanager",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/logo.svg"
    },
    "plugins": [
      "expo-router",
      "expo-barcode-scanner",
      [
        "expo-notifications",
        {
          "icon": "./assets/logo.svg",
          "color": "#667eea",
          "defaultChannel": "default"
        }
      ]
    ],
    "scheme": "supermanager"
  }
}